<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

   <RelativeLayout  android:id="@+id/linearLayout33"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@color/headergray"
    android:padding="10dp" >
   
    <Button
        android:id="@+id/addagentbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/plusicon"
            android:drawablePadding="12dip"
        
        android:text="@string/newagent"
        android:textColor="@color/greenbuttonrect"
        android:textSize="20sp" />

		<TextView  android:shadowColor="@color/TransparentGrey"
		    android:textSize="25sp"
                  android:shadowDx="2"
                  android:shadowDy="2"
                  android:shadowRadius="2" 
                  android:textAppearance="?android:attr/textAppearanceLarge" 
                  android:layout_height="wrap_content" 
                  android:id="@+id/smartagentTv" 
                  android:typeface="serif" 
                  android:textStyle="bold" 
                  android:layout_gravity="right" 
                  android:gravity="right|bottom" 
                  android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
                  android:text="@string/loadingshort" android:layout_width="wrap_content" android:textColor="@color/headerblue"></TextView>

		

		<TextView
		    android:id="@+id/jobstitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/smartagentTv"
		    android:layout_toLeftOf="@+id/smartagentTv"
		    android:layout_marginRight="10dp"
		    android:gravity="right|bottom"
		    android:shadowColor="@color/TransparentGrey"
		    android:shadowDx="2"
		    android:shadowDy="2"
		    android:shadowRadius="2"
		    android:text="@string/numagents"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/headergraysubtitle"
		    android:typeface="serif" />
    
    </RelativeLayout>    

    <ListView
        android:id="@+id/listsmartagent"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.95"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/graydivider"
        android:dividerHeight="2dp" >
</ListView>
    </LinearLayout>