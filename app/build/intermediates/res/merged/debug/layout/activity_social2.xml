<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
       
    android:orientation="vertical"        
  android:paddingLeft="90dp"
         android:paddingRight="90dp" >

      <Button
          android:id="@+id/buttonsendtofriend"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:background="@drawable/search"
          android:text="@string/sendtofriend"
          android:textColor="@android:color/white"
          android:textSize="25sp" />
          

<Button
    android:id="@+id/buttonrateus"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/search"
    android:text="@string/rateus"
    android:textColor="@android:color/white"
    android:textSize="25sp" />
      

   <Button
       android:id="@+id/buttonlike"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:background="@drawable/search"
       android:text="@string/like"
       android:textColor="@android:color/white"
       android:textSize="25sp" />
      
<Button
         android:id="@+id/buttongoogle"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         android:background="@drawable/search"
         android:text="@string/googlePlus"
         android:textColor="@android:color/white"
         android:textSize="25sp" />
      
    
     <Button
         android:id="@+id/buttontothesite"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         android:background="@drawable/search"
         android:text="@string/tothesite"
         android:textColor="@android:color/white"
         android:textSize="25sp" />
      
      
  
    

</LinearLayout>

</RelativeLayout>
